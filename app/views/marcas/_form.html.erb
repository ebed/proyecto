<% unless @marca.logo.blank? %>
  <%= image_tag @marca.logo(:thumb) %>
<% end %>
<%= bootstrap_form_for(@marca) do |f| %>


  <%= f.text_field :name, :label => "NOMBRE MARCA"  %>
  <br/>

  <%= f.file_field :logo %>

  <%= f.submit "Guardar" %>
   <%= link_to marcas_path, class:"btn btn-default" do %>
          VOLVER
      <% end %>
<% end %>
