<div class='panel panel-default'>
  <div class='panel-heading'>


        <h4 class="titulos">MIS TIENDAS
        <%= link_to new_tienda_path, class: "enlaces3"  do %>
         <%=  fa_icon 'plus-square-o'  %>
        <% end %>

        </h4>



  </div>
<table class="table table-bordered">


    <tr class='active'><td>Nombre</td><td>Fecha creaci√≥n</td><td>Cantidad articulos</td><td>Vendedor</td><td></td></tr>

    <% @tiendas.each do |tienda| %>
      <tr class="rowarticulos">

        <td> <%= link_to tienda_path(tienda), class: "enlaces" do %>
               <%= tienda.name %>
             <% end %>
        </td>
        <td  align="center">  <%= tienda.created_at.strftime("%d/%m/%Y ")  %></td>
        <td  align="center">  <%= tienda.articles.count %></td>
        <td  align="center">  <%= tienda.seller.name %></td>


        <td>

         <%= link_to edit_tienda_path(tienda), class: "enlaces3"  do %>
          <%=  fa_icon 'edit'  %>
        <% end %>
         <%= link_to tienda_path(tienda), method: :delete, class: "enlaces3"  do %>
          <%=  fa_icon 'remove'  %>
        <% end %>
        </td>
      </tr>
    <% end %>

</table>
</div>
