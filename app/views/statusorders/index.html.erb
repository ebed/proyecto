<p id="notice"><%= notice %></p>

<h1>Statusorders</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statusorders.each do |statusorder| %>
      <tr>
       <td><%= statusorder.id %></td>
        <td><%= statusorder.value %></td>
        <td> <% if statusorder.pending == 1 %>
              ESTADO ABIERTO
            <% else %>
              ESTADO CERRADO
              <% end %>
              </td>
        <td><%= link_to 'Show', statusorder %></td>
        <td><%= link_to 'Edit', edit_statusorder_path(statusorder) %></td>
        <td><%= link_to 'Destroy', statusorder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

