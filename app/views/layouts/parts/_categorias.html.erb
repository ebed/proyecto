 <% Category.where("category_id is null").order(:name).each do |category| %>

<div class="panel-group panel-group-categorias " id="accordion" role="tablist" aria-multiselectable="false">
  <div class="panel panel-default panel-categorias">
    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#categoria<%= category.id %>" aria-expanded="true"
      aria-controls="categoria<%= category.id %>" >
        <div class="panel-heading panel-heading-categorias" role="tab" id="headCategoria<%= category.id %>">
          <h4 class="panel-title">
              <%=  category.name  %>
          </h4>
        </div>
      </a>
    </div>
    <div id="categoria<%= category.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headCategoria<%= category.id %>" easing="linear" duration="0.5s">
      <div class="panel-body-categorias ">

          <li class="list-group-item list-categories-item">
            <%= link_to "TODOS", homecategories_path(category.id), class: "btn btn-default btn-block"%>
          </li>

           <% category.subcategories.order(:name).each do |hijo| %>
              <li class="list-group-item list-categories-item">
                <%= link_to hijo.name, homesubcategories_path(hijo.id), class: "btn btn-default btn-block"%>
              </li>
              <% end %>


       </div>
       </div>
  </div>

 <% end %>

