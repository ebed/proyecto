
<% if current_user.present? && current_user.isSeller?  %>

<div class="panel panel-default panel-lateral">
  <div class="panel-heading panel-lateral-heading">
    <div class="row">
      <div class="col-md-8">
        MIS TIENDAS
      </div>
      <div class="col-md-1">
        <div class="caret_down">
            <a  role="button" data-toggle="collapse" data-parent="#accordion" href="#carrosectionbody" aria-expanded="false" aria-controls="carrosectionbody" ><%= fa_icon " 2x caret-square-o-down" %>
         </a>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
      <% current_user.seller.tiendas.each do |tienda| %>
         <div class="row rowtienda">
          <div class="col-md-4">
          <%= link_to tienda.name, orders_tienda_path(tienda) %>
          </div>
          <div class="col-md-8">
            <small>

            <strong><%= tienda.contarordenespendientes %></strong>
            ORDENES PENDIENTES</small>
          </div>
        </div>
        <hr>

        <tr>
          <td>

          </td>
        <td></td>


        </tr>
      <% end %>


     <div class="row">
     <div class="col-md-12">&nbsp;</div>
      </div>
    <div class="row">
      <div class="col-md-6">
        <% if current_user.profile.present? && ( current_user.profile.canadmin || current_user.profile.canadminstore )%>
           <%= button_to "ORDENES", orders_path, :method =>"get", class:"btn btn-block btn-default"%>

        <% end %>

      </div>
       <div class="col-md-6">
         <%= button_to "TIENDAS", tiendas_path, :method =>"get", class:"btn btn-block btn-default"%>
      </div>
    </div>

  </div>
</div>
<% end %>
