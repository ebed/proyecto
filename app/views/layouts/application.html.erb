<!DOCTYPE html>
<html  ng-app="app">
  <head>
    <title>Proyecto</title>
    <%= include_gon %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag Ckeditor.cdn_url%>



  </head>

  <body >

  <% if current_user.present? %>
    <%= render 'layouts/parts/carritocompra' %>
  <% end %>

  <div class="container-fluid">
    <%= render 'layouts/parts/header' %>



    <div class="row">
      <div class="col-md-2">

        <%= render 'layouts/parts/columnaizq' %>
      </div>

<% if current_user.present?  %>

     <div class="col-md-10">
     <div class="row">
      <div class="col-md-12">
       <%= render partial: "layouts/parts/flash_messages", flash: flash %>
      </div>
    </div>
        <%= yield %>
      </div>

<% else %>
      <div class="col-md-8">
        <%= yield %>
      </div>
      <div class="col-md-2">
        <%= render 'layouts/parts/columnader' %>
      </div>
    </div>


 <% end %>

    <div class="row">
      <div class="col-md-12">
        <%= render 'layouts/parts/footer' %>
      </div>
    </div>

    </div>
  </body>
</html>


