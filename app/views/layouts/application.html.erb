<!DOCTYPE html>
<html  ng-app="app">
  <head>
    <title>Proyecto</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body >

 <div class="container-fluid" >

    <%= render 'layouts/navbar' %>
<p>

        <div class="row">
          <div class="col-md-2">
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-12">
                  <%= render 'layouts/usermenu' %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <%= render 'layouts/categorias' %>
                </div>
              </div>
            </div>

          </div>

          <div class="col-md-10">

            <div class="container-fluid">

                 <% if notice %>
                    <p class="alert alert-success"><%= notice %></p>
                  <% end %>
                  <% if alert %>
                    <p class="alert alert-danger"><%= alert %></p>
                  <% end %>


                <%= yield %>

            </div>

          </div>

        </div>



    <%= render 'layouts/footer' %>

</div>

  </body>
</html>


