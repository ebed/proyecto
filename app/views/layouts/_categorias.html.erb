  <!-- Primer nivel categorias -->
  <div class="btn-group-vertical" role="group" aria-label="..." ng-controller="appController">


    <% Category.where("category_id is null").order(:name).each do |category| %>

        <%= link_to category.name, homecategories_path(category.id), class: "btn btn-info", :'ng-click' => "changeCategory(#{category.id})" %>

       <% category.hijos.order(:name).each do |hijo| %>

           <%= link_to hijo.name, homecategories_path(hijo.id), class: "btn btn-default", :'ng-show' => "showCategory()==#{category.id}"%>

            <% end %>
        <% end %>
  </div>



