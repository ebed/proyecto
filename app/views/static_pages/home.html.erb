
  <div class="row">
    <div class="col-md-1">
    </div>
    <% @main_products.each do |producto| %>
      <div class="col-md-2">
        <div class="thumbnail">

        <%= image_tag producto.imagenprincipal.image.thumb('200x200#').url if producto.imagenprincipal.image_stored? %>

           <div class="caption">
          <center>
            <h4>
              <%= link_to producto.name, product_path(producto) %>
            </h4>
            </center>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-md-1">
    </div>
  </div>





