
<div class="well well-carrusel" align="center">

<%= render 'static_pages/componentes/carrusel' %>

</div>


      <div class="panel panel-default">
        <div class="panel-body">
          <% if @destacados.present? %>
              <% @destacados.each do |producto| %>
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6  center-block  ">
                  <%= link_to producto, { :class => 'tooltips', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', :title => '', 'data-original-title' =>  producto.name.capitalize   + " | "+ producto.marca.name.capitalize}  do %>

                      <table class="tablaimagenes">
                      <tr>
                        <td align="center">

                          <%= image_tag producto.imagenprincipal , class: 'img-responsive', caption: 'articulo'  %>

                       </td>
                       </tr>

                       </table>

                  <% end %>
                </div>

              <% end %>
            <% end %>

        </div>
      </div>
