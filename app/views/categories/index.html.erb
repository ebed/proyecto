
<div class='panel panel-default'>
  <div class='panel-heading'>


        <h3>LISTA CATEGORIAS
          <%= link_to new_category_path do%>
            <%= fa_icon 'plus-square-o' %>
          <% end %>
        </h3>



  </div>
    <table class="table">

     <% @categories.each do |category| %>
      <tr >
        <td colspan=2><%= fa_icon "caret-right" %><%= category.name %></td>
        <td align='right'>

           <%= link_to edit_category_path(category)  do %>
                  <%=  fa_icon 'edit'  %>
              <% end %>
              <%= link_to category_path(category), :method =>:delete do %>
                 <%=  fa_icon 'remove'  %>
           <% end %>

        </td>
      </tr>
        <% category.subcategories.order(:name).each do |hijo| %>

          <tr >
          <td></td>
            <td> <%= fa_icon "caret-right" %><%= fa_icon "caret-right" %>   <%= hijo.name %> </td>
            <td align='right'>
             <%= link_to edit_category_path(hijo) do %>
                    <%=  fa_icon 'edit'  %>
                <% end %>
                <%= link_to category_path(hijo), :method =>:delete do %>
                   <%=  fa_icon 'remove'  %>
             <% end %>
          </td>
          </tr>
        <% end %>

      <% end %>

    </table>
    </div>
