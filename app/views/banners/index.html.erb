
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>BANNERS SITIO
      <%= link_to new_banner_path do %>
        <%= fa_icon 'plus-square-o' %>
      <%end%>
    </h4>
  </div>


  <table class="table table-bordered">
    <thead>
      <tr class="active">
        <td></td>
        <td>Descripci√≥n</td>

        <td>Pagina</td>
        <td>Operativo</td>
        <td>Articulo</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @banners.each do |banner| %>

        <tr>
          <td><%= image_tag banner.imagen(:thumb) %></td>
          <td><%= banner.descripcion %></td>
          <td>
            <% unless banner.pagina.blank? %>
              <%= banner.pagina %>
            <% end %>
          </td>
          <td><%= banner.operativo %></td>
          <td> </td>
          <td>
            <%= link_to edit_banner_path(banner)  do %>
              <%=  fa_icon 'edit'  %>
            <% end %>
            <%= link_to banner_path(banner), :method =>:delete do %>
              <%=  fa_icon 'remove'  %>
            <% end %></td>
        </tr>


      <% end %>
      </tbody>
  </table>



</div>

