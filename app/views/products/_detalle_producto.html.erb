<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-2"><strong>Nombre Producto</strong></div>
      <div class="col-md-4"><%= @product.name %></div>
    </div>
    <div class="row">
      <div class="col-md-2"><strong>Marca</strong></div>
      <div class="col-md-4"><%= @product.marca.name %></div>
    </div>
    <div class="row">
      <div class="col-md-2"><strong>Categoria</strong></div>
      <div class="col-md-4"><%= @product.subcategory.name %></div>
    </div>
     <div class="row">
      <div class="col-md-2"><strong>Especificaciones</strong></div>
      <div class="col-md-4"><%= @product.specifications %></div>
    </div>
  </div>
</div>
