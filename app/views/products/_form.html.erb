
<%= bootstrap_form_for(@product) do |f| %>

  <%= f.text_field :name %>
  <%= f.select :marca_id,  Marca.all.collect {|p| [ p.name, p.id ] } %>
  <%= f.select :category_id,  Category.all.collect {|p| [ p.name, p.id ] } %>

  <%= f.text_area :specifications %>
  <%= f.text_field :year %>

  <%= f.submit "Guardar" %>
<% end %>
