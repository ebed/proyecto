<% if user_signed_in? %>
  <% if current_user.email == "ebedmail@gmail.com" %>

    <%= link_to "Editar", edit_product_path(@product) %>

  <% end %>
<% end %>

<h3>Datos del <%= @product.name %> <%= @product.marca.name %> </h3>

Nota Promedio <%= @product.average_score %><br/>
Menor precio <%= @product.price_since %>

<p>
  <%= raw @product.specifications %>
</p>
