
<%= bootstrap_form_for(@article) do |f| %>


  <%= f.select :product_id,  Product.all.collect {|p| [ p.name, p.id ] } %>
  <%= f.text_field :talla %>
  <%= f.text_field :color  %>
  <%= f.text_field :segmento %>

  <%= f.text_field :sexo %>
  <%= f.text_field :stock_inicial %>
  <%= f.text_field :stock %>
  <%= f.text_field :price %>
  <%= f.text_field :price_buy %>
  <% if @article.tienda_id.present? %>
    <%= f.hidden_field :tienda_id, value: @article.tienda_id %>
  <% else %>
    <%= f.hidden_field :tienda_id, value: @tienda.id %>
    <% end %>

  <%= f.submit "Guardar" %>
<% end %>
