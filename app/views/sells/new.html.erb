    <%= render 'form' %>
    <%= bootstrap_form_for (@order)  do |f| %>
    <table class="table" ng-controller="appControllerOrders as appctl">
    <tr>
      <th colspan=1>METODO DE ENVIO</th>
      <td colspan=1>
        <% if @cambiaDelivery %>
          <select name="delivery_company_id"  class="form-control" ng-model="company.selectedCompany" ng-change="actualizaPrecio()">
          <option ng-repeat="compania in delivery_companies" value={{compania.id}}>{{compania.nombre}}</option>


        <% end %>
        </select>
       </td>
       <th colspan=3>VALOR DESPACHO</th>
       <td>
       {{valordespacho | currency : "$" : 0}}

       <input type="hidden" name="valordespacho" value="{{valordespacho}}">
       </td>
    </tr>

    <tr>
      <td colspan = 4></td>
      <th>VALOR TOTAL</th>
      <td > {{total | currency: "$" : 0}}   </td>
      <input type="hidden" name="total" value="{{total}}">
    </tr>

    </table>
      <%= f.submit "CREAR ORDEN", class: "btn btn-primary" %>
    <% end %>
